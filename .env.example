# Variables de Entorno - Template de Desarrollo con IA

# ==============================================
# üîê CLAVES DE API PRINCIPALES
# ==============================================

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username
GITHUB_REPO_DEFAULT=your_default_repo_name

# ==============================================
# üé≠ PLAYWRIGHT (Browser Automation)
# ==============================================
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_TIMEOUT=30000

# ==============================================
# üóÑÔ∏è BASE DE DATOS - MONGODB
# ==============================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=your_project_database
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# ==============================================
# ‚ö° SUPABASE (Backend as a Service)
# ==============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==============================================
# ü§ñ AI SERVICES
# ==============================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google AI
GOOGLE_AI_API_KEY=your_google_ai_api_key

# ==============================================
# üîß HERRAMIENTAS DE DESARROLLO
# ==============================================

# Jest Testing
NODE_ENV=development
TEST_TIMEOUT=10000

# Vite/React Development
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=Your App Name

# Flutter/Dart
FLUTTER_ENV=development

# ==============================================
# üìß SERVICIOS EXTERNOS
# ==============================================

# Email Service (ejemplo: SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourapp.com

# Storage Service (ejemplo: AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# ==============================================
# üåê CONFIGURACIONES DE ENTORNO
# ==============================================

# API Base URLs
API_BASE_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# ==============================================
# üì± MOBILE DEVELOPMENT
# ==============================================

# React Native
REACT_NATIVE_ENV=development

# Flutter Specific
FLUTTER_WEB_PORT=5000
FLUTTER_WEB_HOST=localhost

# ==============================================
# üß™ TESTING ENVIRONMENTS
# ==============================================

# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/test_db
TEST_SUPABASE_URL=https://your-test-project.supabase.co

# Browser Testing
TEST_BROWSER_HEADLESS=true
TEST_VIEWPORT_WIDTH=1920
TEST_VIEWPORT_HEIGHT=1080

# ==============================================
# üìä ANALYTICS & MONITORING
# ==============================================

# Application Monitoring
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ==============================================
# üöÄ DEPLOYMENT
# ==============================================

# Production URLs
PROD_API_URL=https://api.yourapp.com
PROD_FRONTEND_URL=https://yourapp.com

# CI/CD
CI_CD_TOKEN=your_ci_cd_token